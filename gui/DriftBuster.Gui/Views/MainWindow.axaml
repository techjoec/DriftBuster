<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:DriftBuster.Gui.ViewModels"
        xmlns:conv="using:DriftBuster.Gui.Converters"
        xmlns:anim="using:Avalonia.Animation"
        xmlns:views="using:DriftBuster.Gui.Views"
        x:Class="DriftBuster.Gui.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        mc:Ignorable="d"
        Width="1120"
        Height="720"
        Title="DrB DriftBuster">

  <Grid RowDefinitions="Auto,*">
    <Border Padding="20,16" BorderThickness="0,0,0,1" BorderBrush="{DynamicResource Brush.BorderStrong}">
      <Grid ColumnDefinitions="Auto,*,Auto,Auto" ColumnSpacing="16" VerticalAlignment="Center">
        <Border Width="48"
                Height="48"
                CornerRadius="24"
                Background="{DynamicResource Brush.Accent}">
          <TextBlock Text="DrB"
                     HorizontalAlignment="Center"
                     VerticalAlignment="Center"
                     FontSize="18"
                     FontWeight="Bold"
                     Foreground="#0B1120" />
        </Border>
        <StackPanel Grid.Column="1" Spacing="2" VerticalAlignment="Center">
          <TextBlock Text="DriftBuster" FontSize="20" FontWeight="SemiBold" />
          <TextBlock Text="Configuration reconnaissance, diff planning &amp; hunt insights" Classes="subtitle" />
        </StackPanel>
        <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="10" VerticalAlignment="Center">
          <Border Width="10" Height="10" CornerRadius="5"
                  Background="{Binding IsBackendHealthy, Converter={x:Static conv:BoolToBrushConverter.Instance}, ConverterParameter='#21C55D;#EF4444'}">
            <ToolTip.Tip>
              <TextBlock Text="{Binding BackendStatusText}" />
            </ToolTip.Tip>
          </Border>
          <Button Classes="outline" Content="Check core" Command="{Binding CheckHealthCommand}" />
        </StackPanel>
        <StackPanel Grid.Column="3" Orientation="Horizontal" Spacing="6" VerticalAlignment="Center">
          <TextBlock Text="Theme" Classes="subtitle" VerticalAlignment="Center" />
          <ToggleSwitch IsCheckedChanged="OnThemeToggled" />
        </StackPanel>
      </Grid>
    </Border>

    <Grid Grid.Row="1" Margin="20" RowDefinitions="Auto,*" RowSpacing="16">
      <Border Classes="surface" Padding="16" CornerRadius="{DynamicResource Radius.Large}">
        <WrapPanel Spacing="12" VerticalAlignment="Center">
          <ToggleButton Content="Diff planner"
                        MinWidth="120"
                        Command="{Binding ShowDiffCommand}"
                        IsChecked="{Binding IsDiffSelected, Mode=OneWay}" />
          <ToggleButton Content="Hunt explorer"
                        MinWidth="120"
                        Command="{Binding ShowHuntCommand}"
                        IsChecked="{Binding IsHuntSelected, Mode=OneWay}" />
          <ToggleButton Content="Profiles"
                        MinWidth="120"
                        Command="{Binding ShowProfilesCommand}"
                        IsChecked="{Binding IsProfilesSelected, Mode=OneWay}" />
          <ToggleButton Content="Multi-server"
                        MinWidth="120"
                        Command="{Binding ShowMultiServerCommand}"
                        IsChecked="{Binding IsMultiServerSelected, Mode=OneWay}" />
          <Border Width="1" Height="26" Background="{DynamicResource Brush.Border}" Margin="12,0" />
          <TextBlock Text="Fast scanning, rich metadata, zero drift surprises." VerticalAlignment="Center" Foreground="{DynamicResource Brush.TextSecondary}" />
          <Button Content="Ping core"
                  Classes="outline"
                  Command="{Binding PingCoreCommand}"
                  ToolTip.Tip="Send ping and show reply in Hunt" />
        </WrapPanel>
      </Border>

      <Border Grid.Row="1"
              Classes="dashboard-card"
              Padding="24"
              CornerRadius="{DynamicResource Radius.Large}">
        <TransitioningContentControl Content="{Binding CurrentView}">
          <TransitioningContentControl.PageTransition>
            <anim:CrossFade Duration="0:0:0.15" />
          </TransitioningContentControl.PageTransition>
        </TransitioningContentControl>
      </Border>
    </Grid>
    <views:ToastHost Grid.RowSpan="2" DataContext="{Binding Toasts}" />
  </Grid>
</Window>
